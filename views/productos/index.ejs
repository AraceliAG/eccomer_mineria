<%- include('../layout/cabecera.ejs') %>

<h1>Ecommerce</h1>
<p>Welcome</p>

<div class="container">
    <br>
    <div id="theCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="3000">
        <!-- Indicadores -->
        <ol class="carousel-indicators">
            <li data-bs-target="#theCarousel" data-bs-slide-to="0" class="active"></li>
            <li data-bs-target="#theCarousel" data-bs-slide-to="1"></li>
            <li data-bs-target="#theCarousel" data-bs-slide-to="2"></li>
            
        </ol>

        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="http://www.bcu.ac.uk/mediaitem/visual-communication-illustration-02-130585258441045504.jpg?quality=90" class="d-block w-100" alt="Ilustracion"> 
                <div class="carousel-caption d-none d-md-block">
                    <h3>Gusti Ilustración</h3>
                    <p>Exposición</p>
                </div>
            </div>

            <div class="carousel-item">
                <img src="https://mir-s3-cdn-cf.behance.net/project_modules/1400/e86e8b59124321.5a15e4ccd8622.jpg" class="d-block w-100" alt="Pintura">
                <div class="carousel-caption d-none d-md-block">
                    <h3>DoArt Pintura</h3>
                    <p>Curso</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="https://cdn.dribbble.com/users/324248/screenshots/3978513/planet2_800.jpg" class="d-block w-100" alt="Diseño">
                <div class="carousel-caption d-none d-md-block">
                    <h3>UX UI Diseño Gráfico</h3>
                    <p>Curso</p>
                </div>
            </div>
        </div>

        <a class="carousel-control-prev" href="#theCarousel" role="button" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Anterior</span>
        </a>
        <a class="carousel-control-next" href="#theCarousel" role="button" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Siguiente</span>
        </a>
    </div>
</div>

<!-- Espacio entre el carrusel y la tabla -->
<div class="container mt-5">
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>ID</th>
                <th>Nombre</th>
            </tr>
        </thead>
        <tbody>
            <% productos.forEach((producto, index) => { %>
                <tr>
                    <td scope="row"><%= index + 1 %></td>
                    <td><%= producto.id %></td>
                    <td><%= producto.nombre %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>

</body>
</html>
