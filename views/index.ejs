<%- include('./layout/cabecera.ejs') %>

<div class="container">
    <br>
    <div id="theCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="3000">
        <!-- Indicadores -->
        <ol class="carousel-indicators">
            <li data-bs-target="#theCarousel" data-bs-slide-to="0" class="active"></li>
            <li data-bs-target="#theCarousel" data-bs-slide-to="1"></li>
            <li data-bs-target="#theCarousel" data-bs-slide-to="2"></li>
            
        </ol>

        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/images/selena.png" class="d-block w-100" alt="Ilustracion"> 
                <div class="carousel-caption d-none d-md-block">
                    <h3>BELLEZA</h3>
                    
                </div>
            </div>

            <div class="carousel-item">
                <img src="/images/cereal.png" class="d-block w-100" alt="Pintura">
                <div class="carousel-caption d-none d-md-block">
                    <h3>DESAYUNO</h3>
                    
                </div>
            </div>
            <div class="carousel-item">
                <img src="/images/colgate.png" class="d-block w-100" alt="Diseño">
                <div class="carousel-caption d-none d-md-block">
                    <h3>SALUD DENTAL</h3>
                </div>
            </div>
        </div>

        <a class="carousel-control-prev" href="#theCarousel" role="button" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Anterior</span>
        </a>
        <a class="carousel-control-next" href="#theCarousel" role="button" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Siguiente</span>
        </a>
    </div>
</div>

<!-- SOLO PRODUCTOS VIDEOJUEGOS-->
<div class="container mt-5">
  <div id="productCarousel" class="carousel slide" data-bs-ride="false">
    <h3>VIDEOJUEGOS</h3>
    <!-- Indicadores -->
    <ol class="carousel-indicators">
      <% productos.forEach((producto, index) => { %>
        <li data-bs-target="#productCarousel" data-bs-slide-to="<%= index %>" class="<%= index === 0 ? 'active' : '' %>"></li>
      <% }) %>
    </ol>

    <div class="carousel-inner">
      <div class="carousel-item active">
        <div class="row">
          <% productos.slice(0, 4).forEach((producto) => { %>
            <div class="col text-center"> <!-- Añadir clase para centrar el contenido -->
              <div class="product-box"> <!-- Contenedor del producto -->
                <img src="<%= producto.imagen %>" class="d-block w-100" alt="<%= producto.nombre %>">
                <h5><%= producto.nombre %></h5>
                <h3>$<%= producto.precio %></h3> <!-- Añadir símbolo de moneda -->

                <form action="" method="post">
                  <input type="hidden" name="productoId" value="<%= producto.idproductos %>">
                  <button type="submit" class="btn btn-primary mt-2">Seleccionar</button>
                </form>

              </div>
            </div>
          <% }) %>
        </div>
      </div>
      <% for (let i = 4; i < productos.length; i += 4) { %>
        <div class="carousel-item">
          <div class="row">
            <% productos.slice(i, i + 4).forEach((producto) => { %>
              <div class="col text-center"> <!-- Añadir clase para centrar el contenido -->
                <div class="product-box"> <!-- Contenedor del producto -->
                  <img src="<%= producto.imagen %>" class="d-block w-100" alt="<%= producto.nombre %>">
                  <h5><%= producto.nombre %></h5>
                  <h3>$<%= producto.precio %></h3> <!-- Añadir símbolo de moneda -->


                  <form action="" method="post">
                    <input type="hidden" name="productoId" value="<%= producto.idproductos %>">
                    <button type="submit" class="btn btn-primary mt-2">Seleccionar</button>
                  </form>
                </div>
              </div>
            <% }) %>
          </div>
        </div>
      <% } %>
    </div>

    <a class="carousel-control-prev" href="#productCarousel" role="button" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Anterior</span>
    </a>
    <a class="carousel-control-next" href="#productCarousel" role="button" data-bs-slide="next" style="background-color: #007bff; color: #fff;">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Siguiente</span>
    </a>
  </div>
</div>




</body>
</html>
