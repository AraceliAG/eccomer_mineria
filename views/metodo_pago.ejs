<%- include('./layout/cabecera.ejs') %>

    <h1>Método de Pago</h1>
  </header>
  <main>
    <section>
      <h2>Elige tu método de pago</h2>
      <button onclick="showCardForm()">Tarjeta de crédito/débito</button>
    </section>

    <section id="card-form" style="display: none; margin-top: 20px;">
      <h2>Pago con Tarjeta</h2>
      <form action="/procesar-pago" method="POST">
        <label for="card-number">Número de tarjeta:</label>
        <input type="text" id="card-number" name="cardNumber" maxlength="16" placeholder="1234 5678 9012 3456" required>
        <label for="card-name">Nombre en la tarjeta:</label>
        <input type="text" id="card-name" name="cardName" placeholder="Nombre Completo" required>
        <label for="expiry-date">Fecha de vencimiento:</label>
        <input type="month" id="expiry-date" name="expiryDate" required>
        <label for="cvv">CVV:</label>
        <input type="text" id="cvv" name="cvv" maxlength="3" placeholder="123" required>
        <button type="submit">Pagar</button>
      </form>
    </section>


    <script>
        function showCardForm() {
          document.getElementById('card-form').style.display = 'block';
        }
    
        function hideCardForm() {
          document.getElementById('card-form').style.display = 'none';
        }
      </script>