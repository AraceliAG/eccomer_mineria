<%- include('./layout/cabecera.ejs') %>

<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>Producto</th>
            <th>Imagen</th>
        </tr>
    </thead>
    <tbody>
        <% for(let i = 0; i < productos.length; i++) { %>
            <tr>
                <!-- Columna para el Ã­ndice del producto -->
                <td scope="row"><%= i + 1 %></td>
                
                <!-- Columna para el nombre del producto -->
                <td><%= productos[i].nombre %></td>
                
                <!-- Columna para la imagen del producto -->
                <td>
                    <% if (productos[i].imagen) { %>
                        <img src="<%= productos[i].imagen %>" alt="<%= productos[i].nombre %>" style="width: 100px; height: auto;">
                    <% } else { %>
                        <span>No hay imagen</span>
                    <% } %>
                </td>

                <td>
                    <button type="button" class="btn btn-primary">Comprar</button>
                </td>
            </tr>
        <% } %>
    </tbody>
</table>
