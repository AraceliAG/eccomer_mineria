<%- include('./layout/cabecera.ejs') %>

<div class="container mt-4">
    <div class="row">
        <% for (let producto = 0; producto < productos.length; producto++) { %> 
            <div class="col-md-12 mb-4">
                <div class="card">
                    <div class="row no-gutters">
                        <div class="col-md-6 d-flex justify-content-center align-items-center">
                            <img src="<%= productos[producto].imagen %>" class="img-fluid" alt="<%= productos[producto].nombre %>" style="max-height: 400px; object-fit: cover;">
                        </div>
                        <div class="col-md-6 d-flex flex-column justify-content-between">
                            <div class="card-body">
                                <h5 class="card-title"><%= productos[producto].nombre %></h5>
                                <p class="card-text"><strong>Precio: $<%= productos[producto].precio %></strong></p>
                                <div class="d-flex">
                                    <a href="#" class="btn btn-primary me-2 btn-agregar-carrito">Agregar al carrito</a>
                                    <a href="#" class="btn btn-secondary btn-agregar-favoritos">Agregar a Favoritos</a>
                                </div>
                            </div>
                            <div class="card-footer">
                                <p class="card-text"><small class="text-muted"><%= productos[producto].descripcion %></small></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</div>

<!-- GRAFICO DE LOS HISTORICOS-->
<div class="container">
    <h3>Históricos</h3>
    <canvas id="myChart" width="400" height="200"></canvas>
    <script src="/javascripts/toallas_humedas.js"></script>
</div>

<!-- MODALES PARA CONFIRMAR-->
<div class="modal fade" id="confirmModal" tabindex="-1" aria-labelledby="confirmModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmModalLabel">Confirmación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p id="confirmMessage">Se ha agregado al carrito.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<!-- Scripts -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>

<script>
    function mostrarConfirmacion(mensaje) {
        document.getElementById('confirmMessage').innerText = mensaje;
        $('#confirmModal').modal('show');
    }

    // EVENTO DE LOS BOTONES
    document.addEventListener('DOMContentLoaded', function() {
        document.querySelectorAll('.btn-agregar-carrito').forEach(button => {
            button.addEventListener('click', function() {
                mostrarConfirmacion('Se ha agregado al carrito.');
            });
        });

        document.querySelectorAll('.btn-agregar-favoritos').forEach(button => {
            button.addEventListener('click', function() {
                mostrarConfirmacion('Se ha agregado a tus favoritos.');
            });
        });
    });
</script>
